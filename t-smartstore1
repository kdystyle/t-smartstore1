            { id: 4, name: "갤럭시 A25 5G", price: 449000, img: "https://placehold.co/400x400/003366/FFF?text=Galaxy+A25+5G", badge: "효도폰", sale: 0 },
        ];

        const usedProducts = [
            { id: 5, name: "[S급] 아이폰 13 미니", price: 550000, img: "https://placehold.co/400x400/pink/000?text=iPhone+13+Mini+Pink", badge: "검수완료", sale: 0 },
            { id: 6, name: "[A급] 갤럭시 S22", price: 380000, img: "https://placehold.co/400x400/green/FFF?text=Galaxy+S22+Green", badge: "특가", sale: 0 },
            { id: 7, name: "[S급] 아이폰 12 Pro", price: 620000, img: "https://placehold.co/400x400/gold/000?text=iPhone+12+Pro+Gold", badge: "배터리100", sale: 0 },
            { id: 8, name: "[B급] 갤럭시 A34", price: 150000, img: "https://placehold.co/400x400/silver/000?text=Galaxy+A34+Silver", badge: "가성비", sale: 0 },
        ];

        const simPlans = [
            { id: 101, carrier: "SKT", title: "5G 베이직", data: "8GB", call: "무제한", price: 49000, highlight: false },
            { id: 102, carrier: "SKT", title: "5G 프라임", data: "무제한", call: "무제한", price: 89000, highlight: true },
            { id: 103, carrier: "알뜰폰", title: "데이터 맘껏 15GB+", data: "15GB+3Mbps", call: "100분", price: 27500, highlight: false },
        ];

        // --- State Management ---
        let cartItems = [];

        // --- Render Functions ---
        function formatPrice(price) {
            return price.toLocaleString() + '원';
        }

        function renderProductCard(product) {
            const discountHtml = product.sale > 0 
                ? `<span class="text-red-500 font-bold ml-1">${product.sale}%</span>` 
                : '';
            
            // Pass entire product object as JSON string for adding to cart
            const productJson = JSON.stringify(product).replace(/"/g, '&quot;');
            
            return `
                <div class="bg-white rounded-xl overflow-hidden hover:shadow-lg transition group cursor-pointer border border-transparent hover:border-gray-200">
                    <div class="relative bg-gray-100 aspect-square overflow-hidden">
                        <img src="${product.img}" alt="${product.name}" class="w-full h-full object-cover group-hover:scale-105 transition duration-500">
                        ${product.badge ? `<span class="absolute top-2 left-2 bg-black text-white text-[10px] font-bold px-2 py-1 rounded-sm">${product.badge}</span>` : ''}
                        <button onclick="addToCart(${productJson})" class="absolute bottom-2 right-2 bg-white p-2 rounded-full shadow hover:bg-primary hover:text-white transition opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 duration-300">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="8" cy="21" r="1"/><circle cx="19" cy="21" r="1"/><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/></svg>
                        </button>
                    </div>
                    <div class="p-4">
                        <h3 class="text-sm text-gray-700 font-medium line-clamp-2 h-10 mb-1">${product.name}</h3>
                        <div class="flex items-center">
                            <span class="text-lg font-bold text-gray-900">${formatPrice(product.price)}</span>
                            ${discountHtml}
                        </div>
                        <div class="mt-2 flex gap-1">
                            <span class="text-[10px] text-gray-500 border border-gray-200 px-1 rounded">무료배송</span>
                        </div>
                    </div>
                </div>
            `;
        }

        function renderPlanCard(plan) {
            return `
                <div class="bg-white rounded-xl p-5 text-gray-800 flex flex-col justify-between h-full relative overflow-hidden group hover:-translate-y-1 transition duration-300 border border-gray-100 hover:border-primary">
                    ${plan.highlight ? '<div class="absolute top-0 right-0 bg-secondary text-[10px] font-bold px-3 py-1 rounded-bl-lg text-black">추천</div>' : ''}
                    <div>
                        <div class="text-xs font-bold text-gray-400 mb-1">${plan.carrier}</div>
                        <h3 class="text-lg font-bold mb-3">${plan.title}</h3>
                        <div class="space-y-2 text-sm text-gray-600 mb-4">
                            <div class="flex items-center gap-2">
                                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path></svg>
                                <span>데이터: <span class="font-bold text-gray-800">${plan.data}</span></span>
                            </div>
                            <div class="flex items-center gap-2">
                                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                                <span>음성: ${plan.call}</span>
                            </div>
                        </div>
                    </div>
                    <div class="border-t pt-4 flex items-center justify-between">
                        <span class="text-xl font-bold text-primary">${formatPrice(plan.price)}<span class="text-xs text-gray-400 font-normal">/월</span></span>
                        <button onclick="applyPlan('${plan.title}')" class="bg-gray-900 text-white text-xs px-3 py-2 rounded hover:bg-primary transition">가입상담</button>
                    </div>
                </div>
            `;
        }

        // --- Interaction Logic ---

        function showToast(message) {
            const toast = document.getElementById('toast');
            const msgSpan = document.getElementById('toast-message');
            msgSpan.innerText = message;
            toast.classList.remove('opacity-0', 'pointer-events-none');
            setTimeout(() => {
                toast.classList.add('opacity-0', 'pointer-events-none');
            }, 3000);
        }

        // Modal Open/Close Logic
        function openLogin() {
            closeSignup(); // Ensure signup is closed
            document.getElementById('login-modal').classList.remove('hidden');
        }
        function closeLogin() {
            document.getElementById('login-modal').classList.add('hidden');
        }

        function openSignup() {
            closeLogin(); // Ensure login is closed
            document.getElementById('signup-modal').classList.remove('hidden');
        }
        function closeSignup() {
            document.getElementById('signup-modal').classList.add('hidden');
        }

        // Terms Modal
        function openTerms() {
            document.getElementById('terms-modal').classList.remove('hidden');
        }
        function closeTerms() {
            document.getElementById('terms-modal').classList.add('hidden');
        }

        // Privacy Modal
        function openPrivacy() {
            document.getElementById('privacy-modal').classList.remove('hidden');
        }
        function closePrivacy() {
            document.getElementById('privacy-modal').classList.add('hidden');
        }

        function switchToSignup() { closeLogin(); openSignup(); }
        function switchToLogin() { closeSignup(); openLogin(); }

        // Form Handlers
        function handleLogin() {
            closeLogin();
            showToast('로그인 되었습니다. (데모)');
        }
        function handleSignup() {
            closeSignup();
            showToast('회원가입이 완료되었습니다. (데모)');
        }

        // Cart Logic
        function openCart() {
            const drawer = document.getElementById('cart-drawer');
            const content = document.getElementById('cart-content');
            drawer.classList.remove('hidden');
            setTimeout(() => {
                content.classList.remove('translate-x-full');
            }, 10);
            renderCartItems();
        }

        function closeCart() {
            const drawer = document.getElementById('cart-drawer');
            const content = document.getElementById('cart-content');
            content.classList.add('translate-x-full');
            setTimeout(() => {
                drawer.classList.add('hidden');
            }, 300); // Wait for transition
        }

        function addToCart(product) {
            cartItems.push(product);
            updateCartCount();
            showToast(`${product.name}이(가) 장바구니에 담겼습니다.`);
            openCart(); // Automatically open cart to show item
        }

        function removeFromCart(index) {
            cartItems.splice(index, 1);
            updateCartCount();
            renderCartItems();
        }

        function updateCartCount() {
            const badge = document.getElementById('cart-count');
            badge.innerText = cartItems.length;
            if (cartItems.length > 0) {
                badge.classList.remove('opacity-0');
            } else {
                badge.classList.add('opacity-0');
            }
            badge.classList.add('scale-125');
            setTimeout(() => badge.classList.remove('scale-125'), 200);
        }

        function renderCartItems() {
            const container = document.getElementById('cart-items-container');
            const totalEl = document.getElementById('cart-total');
            
            if (cartItems.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-20 text-gray-400">
                        <i data-lucide="shopping-bag" class="w-12 h-12 mx-auto mb-3 opacity-50"></i>
                        <p>장바구니가 비어있습니다.</p>
                    </div>
                `;
                totalEl.innerText = "0원";
                return;
            }

            let total = 0;
            container.innerHTML = cartItems.map((item, index) => {
                total += item.price;
                return `
                    <div class="flex gap-4 items-center bg-gray-50 p-3 rounded-lg relative group">
                        <img src="${item.img}" class="w-16 h-16 object-cover rounded bg-white">
                        <div class="flex-1">
                            <h4 class="text-sm font-bold line-clamp-1">${item.name}</h4>
                            <p class="text-sm text-primary font-bold">${formatPrice(item.price)}</p>
                        </div>
                        <button onclick="removeFromCart(${index})" class="p-1 text-gray-400 hover:text-red-500 transition">
                            <i data-lucide="trash-2" class="w-4 h-4"></i>
                        </button>
                    </div>
                `;
            }).join('');
            
            totalEl.innerText = formatPrice(total);
        }

        function checkout() {
            if (cartItems.length === 0) {
                showToast("장바구니가 비어있습니다.");
                return;
            }
            showToast("주문 페이지로 이동합니다. (데모)");
            closeCart();
            cartItems = [];
            updateCartCount();
        }

        window.applyPlan = function(planName) {
            showToast(`'${planName}' 상담 신청이 완료되었습니다.`);
        }

        // --- Init ---
        document.addEventListener('DOMContentLoaded', () => {
            // Render Icons
            lucide.createIcons();

            // Render Products
            const grid = document.getElementById('product-grid');
            grid.innerHTML = newProducts.map(renderProductCard).join('');

            // Render Used Phones
            const usedGrid = document.getElementById('used-grid');
            usedGrid.innerHTML = usedProducts.map(renderProductCard).join('');

            // Render Plans
            const planGrid = document.getElementById('plan-grid');
            planGrid.innerHTML = simPlans.map(renderPlanCard).join('');
        });

    </script>
