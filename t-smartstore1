    <!-- JavaScript Logic -->
    <script>
        // --- Mock Data ---
        const newProducts = [
            { id: 1, name: "삼성 갤럭시 S24 Ultra", price: 1590000, img: "https://placehold.co/400x400/222/FFF?text=Galaxy+S24+Ultra+Photo", badge: "BEST", sale: 5 },
